@{
    ViewData["Title"] = "NewFA";
}

<div class="container">
    <div class="row justify-content-center">

        <div class="col-xl-12 col-lg-12 col-md-12">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Fatura Kayıt Formu</h1>
                                </div>

                                <form class="user">

                                    <div class="form-group col-12">


                                        <div class="form-group col-md-6 float-right">
                                            <label class="col-form-label col-4 float-left">Fatura Tipi:</label>

                                            <div class="col-8 float-right">
                                                <select class="form-control custom-select" id="FAType">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="3">Elektrik</option>
                                                    <option value="4">Su</option>
                                                    <option value="4">Doğalgaz</option>
                                                    <option value="4">Aidat</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6 float-left">
                                            <label class="col-form-label col-4 float-left">Kullanıcı:</label>

                                            <div class="col-8 float-left">
                                                <select class="form-control custom-select" id="userId">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="1">Kaan Baş</option>
                                                    <option value="2">Deniz Toprak</option>
                                                    <option value="2">Anıl Demir</option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="form-group col-12">

                                        <div class="form-group col-md-6 float-left">
                                            <label class="col-form-label col-4 float-left">Fatura Tutarı:</label>
                                            <input type="number" class="form-control form-control-user col-8 float-right"
                                                   id="Amount" aria-describedby="AmountHelp"
                                                   placeholder="örn. 250">
                                        </div>

                                        <div class="form-group col-md-6 float-right">
                                            <label class="col-form-label col-4 float-left">Fatura Durumu:</label>

                                            <div class="col-8 float-right">
                                                <select class="form-control custom-select" id="faStatus">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="3">Pasif</option>
                                                    <option value="4">Aktif</option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>



                                    <div class="form-group col-12" data-provide="datepicker">
                                        <div class="form-group col-md-6 float-left">
                                            <label class="col-form-label col-4 float-left">Telefon No:</label>

                                            <div class="form-group col-md-6 float-left"  >
                                                <div class="input-group date" id="id_4">
                                                    <input type="text" value="05/16/2018" class="form-control form-control col-8 float-right" required />
                                                    <div class="input-group-addon input-group-append">
                                                        <div class="input-group-text">
                                                            <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>


                                    </div>
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <a asp-action="Index" asp-controller="FA" class="btn btn-primary btn-user btn-block " style="width: 250px;margin: 0 auto;font-size: medium;">
                                        Kaydet
                                    </a>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>


<script>
    $('.datepicker').datepicker({
    format: 'mm/dd/yyyy',
    startDate: '-3d'
});
</script>
