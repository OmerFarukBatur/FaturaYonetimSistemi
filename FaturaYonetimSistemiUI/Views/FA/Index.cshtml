
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
                <h1 class="m-0 font-weight-bold text-primary" style="float:left;">Faturalar</h1>
                <a class="btn btn-success"  style="float:right;" asp-action="NewFA" asp-controller="FA">Yeni Fatura Ekle</a>     
            
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Blok No</th>
                            <th>Daire No</th>
                            <th>Fatura Tipi</th>
                            <th>Fatura Tutarı</th>
                            <th>Fatura Durumu</th>
                            <th>Son Ödeme Tarihi</th>
                            <th>Kayıt Tarihi</th>
                            <th>Güncellenme Tarihi</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Blok No</th>
                            <th>Daire No</th>
                            <th>Fatura Tipi</th>
                            <th>Fatura Tutarı</th>
                            <th>Fatura Durumu</th>
                            <th>Son Ödeme Tarihi</th>
                            <th>Kayıt Tarihi</th>
                            <th>Güncellenme Tarihi</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @for (var i = 0; i < 12; i++)
                        {
                            <tr>
                                <td>Tiger Nixon</td>
                                <td>D6</td>
                                <td>15</td>
                                <td>Elektrik</td>
                                <td>250</td>
                                <td>Aktif</td>
                                <td>01/08/2022</td>
                                <td>01/06/2022</td>
                                <td>01/07/2022</td>
                                <td >
                                    <a class="btn btn-warning" style="color:black;" asp-action="UpdateFA" asp-controller="FA"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a>                                    
                                </td>
                                <td>
                                    <a class="btn btn-danger" style="color:whitesmoke;" asp-action="DeleteFA" asp-controller="FA" ><i class="fa fa-trash" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
