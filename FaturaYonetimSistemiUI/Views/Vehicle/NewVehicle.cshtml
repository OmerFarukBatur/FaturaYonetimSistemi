
@{
    ViewData["Title"] = "NewVehicle";
}

<div class="container">
    <div class="row justify-content-center">

        <div class="col-xl-12 col-lg-12 col-md-12">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Araç Kayıt Formu</h1>
                                </div>

                                <form class="user" method="post">

                                    <div class="form-group col-12">

                                        <div class="form-group col-md-6 float-left">
                                            <label class="col-form-label col-4 float-left">Kullanıcı:</label>

                                            <div class="col-8 float-left">
                                                <select class="form-control custom-select" id="userId" name="UserId">
                                                    <option selected>Seçiniz...</option>
                                                    @foreach (var item in @Model)
                                                    {
                                                        <option value="@item.id">@item.FirstName @item.LastName</option>
                                                    }                                               
                                                    
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6 float-right">
                                            <label class="col-form-label col-4 float-left">Araç Plakası:</label>
                                            <input type="text" class="form-control form-control-user col-8 float-right"
                                                   id="PlateNumber" aria-describedby="PlateNumberHelp" name="PlateNumber"
                                                   placeholder="örn. 34 KP 1025">
                                        </div>                                       

                                    </div>


                                    <div class="form-group col-12">

                                        <div class="form-group col-md-6 float-left">
                                            <label class="col-form-label col-4 float-left">Araç Tipi:</label>

                                            <div class="col-8 float-left">
                                                <select class="form-control custom-select" id="VehicleType" name="VehicleType">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="Sedan">Sedan</option>
                                                    <option value="Pick up">Pick up</option>
                                                    <option value="Hatchback">Hatchback</option>
                                                    <option value="SUV">SUV</option>
                                                </select>
                                            </div>
                                        </div>

                                         <div class="form-group col-md-6 float-right">
                                            <label class="col-form-label col-4 float-left">Araç Durumu:</label>

                                            <div class="col-8 float-right">
                                                <select class="form-control custom-select" id="vehicleStatus" name="Status">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="False">Pasif</option>
                                                    <option value="True">Aktif</option>
                                                </select>
                                            </div>
                                        </div>                                       

                                    </div>
                                    
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <button type="submit" class="btn btn-primary btn-user btn-block " style="width: 250px;margin: 0 auto;font-size: medium;">
                                        Kaydet
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

