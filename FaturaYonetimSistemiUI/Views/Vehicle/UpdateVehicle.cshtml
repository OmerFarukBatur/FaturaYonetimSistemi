
@{
    ViewData["Title"] = "UpdateVehicle";
}

<div class="container">
    <div class="row justify-content-center">

        <div class="col-xl-12 col-lg-12 col-md-12">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Araç Kayıt Düzenleme Formu</h1>
                                </div>

                                <form class="user">

                                    <div class="form-group col-12">

                                        <div class="form-group col-md-6 float-left">
                                            <label class="col-form-label col-4 float-left">Kullanıcı:</label>

                                            <div class="col-8 float-left">
                                                <select class="form-control custom-select" id="userId">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="1">Kaan Baş</option>
                                                    <option value="2">Deniz Toprak</option>
                                                    <option value="2">Anıl Demir</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6 float-right">
                                            <label class="col-form-label col-4 float-left">Araç Plakası:</label>
                                            <input type="text" class="form-control form-control-user col-8 float-right"
                                                   id="PlateNumber" aria-describedby="PlateNumberHelp"
                                                   placeholder="örn. 34 KP 1025">
                                        </div>                                       

                                    </div>


                                    <div class="form-group col-12">

                                        <div class="form-group col-md-6 float-left">
                                            <label class="col-form-label col-4 float-left">Araç Tipi:</label>

                                            <div class="col-8 float-left">
                                                <select class="form-control custom-select" id="VehicleType">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="3">Sedan</option>
                                                    <option value="4">Pick up</option>
                                                    <option value="5">Hatchback</option>
                                                    <option value="6">SUV</option>
                                                </select>
                                            </div>
                                        </div>

                                         <div class="form-group col-md-6 float-right">
                                            <label class="col-form-label col-4 float-left">Araç Durumu:</label>

                                            <div class="col-8 float-right">
                                                <select class="form-control custom-select" id="vehicleStatus">
                                                    <option selected>Seçiniz...</option>
                                                    <option value="3">Pasif</option>
                                                    <option value="4">Aktif</option>
                                                </select>
                                            </div>
                                        </div>                                       

                                    </div>
                                    
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <a asp-action="Index" asp-controller="Vehicle" class="btn btn-primary btn-user btn-block " style="width: 250px;margin: 0 auto;font-size: medium;">
                                        Kaydet
                                    </a>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

