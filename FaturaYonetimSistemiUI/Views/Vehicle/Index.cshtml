
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
                <h1 class="m-0 font-weight-bold text-primary" style="float:left;">Araçlar</h1>
                <a class="btn btn-success"  style="float:right;" asp-action="NewVehicle" asp-controller="Vehicle">Yeni Araç Ekle</a>     
            
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Blok No</th>
                            <th>Daire No</th>
                            <th>Araç Plakası</th>
                            <th>Araç Tipi</th>
                            <th>Araç Durumu</th>
                            <th>Kayıt Tarihi</th>
                            <th>Güncellenme Tarihi</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Blok No</th>
                            <th>Daire No</th>
                            <th>Araç Plakası</th>
                            <th>Araç Tipi</th>
                            <th>Araç Durumu</th>
                            <th>Kayıt Tarihi</th>
                            <th>Güncellenme Tarihi</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @for (var i = 0; i < 12; i++)
                        {
                            <tr>
                                <td>Tiger Nixon</td>
                                <td>B6</td>
                                <td>20</td>
                                <td>34 LP 2045</td>
                                <td>Sedan</td>
                                <td>Aktif</td>
                                <td>01/06/2022</td>
                                <td>01/07/2022</td>
                                <td >
                                    <a class="btn btn-warning" style="color:black;" asp-action="UpdateVehicle" asp-controller="Vehicle"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a>                                    
                                </td>
                                <td>
                                    <a class="btn btn-danger" style="color:whitesmoke;" asp-action="DeleteVehicle" asp-controller="Vehicle" ><i class="fa fa-trash" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

